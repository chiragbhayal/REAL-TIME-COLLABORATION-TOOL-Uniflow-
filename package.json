{
  "name": "mern-collaboration-tool",
  "version": "1.0.0",
  "description": "Real-time collaboration tool with MERN stack and desktop support",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "desktop": "node desktop-launcher.js",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-pack": "electron-builder",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": ["collaboration", "real-time", "websocket", "mern", "electron"],
  "author": "MERN Collaboration Tool",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.mern.collaboration",
    "productName": "MERN Collaboration Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/electron.js",
      "public/preload.js",
      "client/build/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
